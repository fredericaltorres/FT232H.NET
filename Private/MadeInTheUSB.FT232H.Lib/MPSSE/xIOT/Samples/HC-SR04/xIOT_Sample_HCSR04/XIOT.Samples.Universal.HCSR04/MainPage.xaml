<Page
    x:Class="XIOT.Samples.Universal.HCSR04.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XIOT.Samples.Universal.HCSR04"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="DistanceText" Foreground="White"  FontSize="44"/>
            <TextBlock Text="{Binding Distance}" Foreground="White" FontSize="44"/>
            <TextBlock Text="mm" Foreground="White" FontSize="44"/>
        </StackPanel>

    </Grid>
</Page>
